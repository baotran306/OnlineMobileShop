<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notifocation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Widget.AppCompat.ActionButton">
    <ImageView
        android:id="@+id/store_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:src="@drawable/ic_store_30"/>

        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/notifycation"
            android:layout_gravity="center"
            android:id="@+id/textShowNotifycation_id"
            android:layout_toRightOf="@id/store_icon"
            android:layout_alignTop="@id/store_icon"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="-8dp"
            android:textAlignment="center"
            android:text="1"
            android:textColor="@color/black"/>


</RelativeLayout>