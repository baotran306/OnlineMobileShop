<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarProfile_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:background="@drawable/bar_color"
                app:title="Information user" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="First name"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/firstName_information_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="Last name"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/lastName_information_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="Identity card"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/idCard_information_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="number"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="BirthDay"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/birthday_information_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="date"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="Phone number"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/phoneNumber_information_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="phone"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="Email"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/email_information_id"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="Address"
                android:textColor="@color/dark_gray" />

            <EditText
                android:id="@+id/address_information_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPostalAddress"
                android:paddingLeft="5dp" />

            <RadioGroup
                android:id="@+id/radioSexual_Regist"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Gender" />

                <RadioButton
                    android:id="@+id/radioMale_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/radioFemale_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FeMale" />
            </RadioGroup>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:layout_width="match_parent"
            android:id="@+id/btn_saveProfile"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:background="@color/OrangeRed"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:text="Save" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>